<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.monitoramento.bruxismo.CadastroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >
        <TextView
            android:id="@+id/tv_emg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_emg_comando"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_emg"
            android:layout_margin="8dp"
            android:digits="0123456789.-"
            android:hint="Comando"
            android:inputType="number|phone"
            android:maxLines="1"
            android:saveEnabled="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/et_emg_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emg_comando"
            android:layout_margin="8dp"
            android:digits="0123456789"
            android:hint="Paciente"
            android:inputType="number|phone|text"
            android:maxLines="1"
            android:saveEnabled="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/et_emg_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emg_nome"
            android:layout_margin="8dp"
            android:digits="0123456789"
            android:hint="Idade"
            android:inputType="number|phone|text"
            android:maxLines="1"
            android:saveEnabled="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
        <EditText
            android:id="@+id/et_emg_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emg_idade"
            android:layout_margin="8dp"
            android:digits="0123456789"
            android:hint="Peso"
            android:inputType="number|phone|text"
            android:maxLines="1"
            android:saveEnabled="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
        <EditText
            android:id="@+id/et_emg_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emg_peso"
            android:layout_margin="8dp"
            android:digits="0123456789"
            android:hint="Tipo"
            android:inputType="number|phone|text"
            android:maxLines="1"
            android:saveEnabled="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
        <EditText
            android:id="@+id/et_emg_valor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_emg_tipo"
            android:layout_margin="8dp"
            android:digits="0123456789"
            android:hint="Valor"
            android:inputType="number|phone|text"
            android:maxLines="1"
            android:saveEnabled="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/bt_emg_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emg_valor"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:onClick="executarLeitura"
            android:text="Gravar" />
    </RelativeLayout>

</ScrollView>
